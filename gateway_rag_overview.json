{
  "title": "Gateway + RAG Overview",
  "panels": [
    {
      "type": "graph",
      "title": "Gateway p95 (ms)",
      "targets": [
        {"expr": "histogram_quantile(0.95, sum(rate(gateway_answer_latency_ms_bucket[5m])) by (le)) * 1000"}
      ]
    },
    {
      "type": "graph",
      "title": "Fanout Errors",
      "targets": [
        {"expr": "sum(increase(gateway_fanout_errors_total[5m]))"}
      ]
    },
    {
      "type": "graph",
      "title": "RAG Steps (ms)",
      "targets": [
        {"expr": "histogram_quantile(0.95, sum(rate(rag_dense_ms_bucket[5m])) by (le))"},
        {"expr": "histogram_quantile(0.95, sum(rate(rag_bm25_ms_bucket[5m])) by (le))"},
        {"expr": "histogram_quantile(0.95, sum(rate(rag_rerank_ms_bucket[5m])) by (le))"},
        {"expr": "histogram_quantile(0.95, sum(rate(rag_complete_ms_bucket[5m])) by (le))"}
      ]
    },
    {
      "type": "graph",
      "title": "Faithfulness",
      "targets": [
        {"expr": "faithfulness_score"}
      ]
    }
  ],
  "schemaVersion": 39
}
